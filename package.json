{
  "name": "mpesa-backend",
  "version": "1.0.0",
  "description": "Node.js TypeScript backend for M-Pesa Daraja API 2.0 integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "prestart": "ls -l dist",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "postbuild": "ls -l dist",
    "postinstall": "tsc"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
